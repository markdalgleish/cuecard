!!!
html(lang="en")
	head
		title= title

		if isRemote
			link(rel='stylesheet', type='text/css', href='css/cuecard.css')
		
		| !{markup.head}

		if styles
			style(type='text/css')!= styles
	
	body(class=isRemote?'cuecard-remote':'cuecard-client')

		if isRemote
			#cuecard-toolbar
				.logo
					span.cue
						em cue
					span.card
						strong card

		if slides
			#cuecard-slides
				| !{markup.beforeSlides}
				| !{slides}
				| !{markup.afterSlides}
	
	script(src='socket.io/socket.io.js')

	| !{markup.foot}

	if isRemote
		script(src='js/remote.js')
	else
		script(src='js/client.js')