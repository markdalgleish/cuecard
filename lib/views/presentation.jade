!!!
html(lang="en")
	head
		title= title
		meta(name='viewport', content='width=device-width; initial-scale=1;')

		if isRemote
			link(rel='stylesheet', type='text/css', href='/css/cuecard.css')
		
		each href in files.css
			link(rel='stylesheet', type='text/css', href=href)

		if styles
			style(type='text/css')!= styles
	
	body(class=isRemote?'cuecard-remote':'cuecard-client')

		if isRemote
			#cuecard-toolbar
				.logo
					span.cue
						em cue
					span.card
						strong card

		if slides
			#presentation!= slides
	
	script(src='/socket.io/socket.io.js')

	each src in files.js	
		script(src=src)

	if isRemote
		script(src='/js/remote.js')
	else
		script(src='/js/client.js')